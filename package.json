{
  "name": "cinematic-pointer",
  "version": "0.1.0",
  "description": "Automated system that replays preplanned journeys and produces cinematic videos where the cursor is the protagonist",
  "main": "dist/index.js",
  "bin": {
    "cinematic-pointer": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsx watch src/cli.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "automation",
    "video",
    "demo",
    "playwright",
    "cursor",
    "cinematic",
    "recording"
  ],
  "author": "Aldo Ruiz Luna",
  "license": "Proprietary",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "playwright": "^1.48.0",
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.1.0",
    "winston": "^3.14.2",
    "zod": "^3.23.8",
    "fluent-ffmpeg": "^2.1.3",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.0",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}