{
  "meta": {
    "name": "Example Journey",
    "viewport": {
      "w": 1440,
      "h": 900
    }
  },
  "start": {
    "url": "https://example.com"
  },
  "steps": [
    {
      "comment": "Wait for page to load",
      "action": "waitFor",
      "locator": {
        "text": "Example Domain"
      },
      "timeoutMs": 5000
    },
    {
      "comment": "Scroll to center of page",
      "action": "scroll",
      "to": "center",
      "durationMs": 1200
    },
    {
      "comment": "Hover over the More Information link",
      "action": "hover",
      "locator": {
        "text": "More information..."
      }
    },
    {
      "comment": "Highlight main content",
      "action": "cameraMark",
      "cinema": {
        "zoom": 1.2
      },
      "target": {
        "text": "Example Domain"
      },
      "durationMs": 900
    },
    {
      "comment": "Click the link",
      "action": "click",
      "locator": {
        "text": "More information..."
      }
    },
    {
      "comment": "Final pause",
      "action": "pause",
      "durationMs": 1000
    }
  ],
  "output": {
    "preset": "trailer",
    "aspect": "16:9",
    "captions": true
  }
}
